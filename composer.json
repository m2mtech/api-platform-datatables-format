{
    "name": "m2mtech/api-platform-datatables-format",
    "description": "Datatables format extension for API Platform.",
    "type": "symfony-bundle",
    "keywords": [
        "extension",
        "format",
        "datatables",
        "api-platform",
        "api"
    ],
    "homepage": "https://github.com/m2mtech/api-platform-datatables-format",
    "license": "MIT",
    "authors": [
        {
            "name": "Martin Mandl",
            "email": "tech@m2m.at",
            "homepage": "https://cms.m2m.at",
            "role": "Developer"
        }
    ],
    "require": {
        "php": ">=7.2.5",
        "api-platform/core": "^2.5",
        "symfony/config": "^5.4|^6.0",
        "symfony/dependency-injection": "^5.4|^6.0",
        "symfony/http-kernel": "^5.4|^6.0"
    },
    "suggest": {
        "metaclass-nl/filter-bundle": "dev-master"
    },
    "require-dev": {
        "phpstan/phpstan": "^1.4",
        "phpunit/phpunit": "^8.5.22|^9.5",
        "roave/security-advisories": "dev-latest",
        "symfony/phpunit-bridge": "^5.4|^6.0",
        "symfony/stopwatch": "^5.4|^6.0",
        "symplify/easy-coding-standard": "^10.0"
    },
    "autoload": {
        "psr-4": {
            "M2MTech\\ApiPlatformDatatablesFormat\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "M2MTech\\ApiPlatformDatatablesFormat\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "cs-fix": "vendor/bin/ecs check --fix",
        "phpstan": "vendor/bin/phpstan analyse --memory-limit 1G"
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
